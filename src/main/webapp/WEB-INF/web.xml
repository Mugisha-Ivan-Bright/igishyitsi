<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Character Encoding Filter - Force UTF-8 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.example.esubmission.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Input Sanitization Filter - Sanitize all parameters -->
    <filter>
        <filter-name>InputSanitizationFilter</filter-name>
        <filter-class>org.example.esubmission.filter.InputSanitizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>InputSanitizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Authentication Filter - checks if user has valid token -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>org.example.esubmission.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
        <url-pattern>/teacher/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/studentDash</url-pattern>
        <url-pattern>/grades</url-pattern>
        <url-pattern>/mySubmissions</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/submitAssignment</url-pattern>
        <url-pattern>/submissionDetails</url-pattern>
    </filter-mapping>

    <!-- Role Authorization Filter - checks if user has correct role for the resource -->
    <filter>
        <filter-name>RoleAuthorizationFilter</filter-name>
        <filter-class>org.example.esubmission.filter.RoleAuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleAuthorizationFilter</filter-name>
        <url-pattern>/student/*</url-pattern>
        <url-pattern>/teacher/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/studentDash</url-pattern>
        <url-pattern>/grades</url-pattern>
        <url-pattern>/mySubmissions</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/submitAssignment</url-pattern>
        <url-pattern>/submissionDetails</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgotPassword</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.CaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>OnBoardingServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.OnBoardingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OnBoardingServlet</servlet-name>
        <url-pattern>/onboarding</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentDash</servlet-name>
        <servlet-class>org.example.esubmission.controller.StudentDash</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDash</servlet-name>
        <url-pattern>/studentDash</url-pattern>
        <url-pattern>/student/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmitAssignment</servlet-name>
        <servlet-class>org.example.esubmission.controller.SubmitAssignmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitAssignment</servlet-name>
        <url-pattern>/submitAssignment</url-pattern>
        <url-pattern>/student/submitAssignment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SubmissionDetails</servlet-name>
        <servlet-class>org.example.esubmission.controller.SubmissionDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmissionDetails</servlet-name>
        <url-pattern>/submissionDetails</url-pattern>
        <url-pattern>/student/submissionDetails</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MySubmissions</servlet-name>
        <servlet-class>org.example.esubmission.controller.MySubmissionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MySubmissions</servlet-name>
        <url-pattern>/mySubmissions</url-pattern>
        <url-pattern>/student/mySubmissions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Grades</servlet-name>
        <servlet-class>org.example.esubmission.controller.GradesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Grades</servlet-name>
        <url-pattern>/grades</url-pattern>
        <url-pattern>/student/grades</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>org.example.esubmission.controller.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/student/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeacherDash</servlet-name>
        <servlet-class>org.example.esubmission.controller.TeachersDash</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherDash</servlet-name>
        <url-pattern>/teacher/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AssignmentDetails</servlet-name>
        <servlet-class>org.example.esubmission.controller.AssignmentDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssignmentDetails</servlet-name>
        <url-pattern>/teacher/assignment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewStudents</servlet-name>
        <servlet-class>org.example.esubmission.controller.ViewStudentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewStudents</servlet-name>
        <url-pattern>/teacher/students</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDash</servlet-name>
        <servlet-class>org.example.esubmission.controller.AdminDash</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDash</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageClasses</servlet-name>
        <servlet-class>org.example.esubmission.controller.ManageClassesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageClasses</servlet-name>
        <url-pattern>/admin/classes</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllocateStudent</servlet-name>
        <servlet-class>org.example.esubmission.controller.AllocateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllocateStudent</servlet-name>
        <url-pattern>/admin/allocate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>org.example.esubmission.controller.VerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
</web-app>